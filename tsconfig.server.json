{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "lib": [
            "esnext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "server.ts",
        "src/lib/types.ts"
    ]
}